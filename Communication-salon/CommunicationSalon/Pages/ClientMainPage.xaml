<Page x:Class="CommunicationSalon.Pages.ClientMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CommunicationSalon.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientMainPage">

    <Grid Background="#ebf9ff">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10">
            <Button x:Name="BAllServices"
                    Click="BAllServices_Click"
                    Content="Тарифы"
                    Margin="0,0,0,10"
                    FontSize="18"
                    Padding="5" />
            <Button x:Name="BAllConnectService"
                    Content="Подключенные тарифы"
                    Click="BAllConnectService_Click"
                    FontSize="18"
                    Padding="5" />
        </StackPanel>
        <Frame x:Name="ClientFrame" 
               NavigationUIVisibility="Hidden"
               Grid.Column="1"/>
    </Grid>
</Page>
