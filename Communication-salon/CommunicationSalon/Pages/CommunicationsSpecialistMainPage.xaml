<Page x:Class="CommunicationSalon.Pages.CommunicationsSpecialistMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CommunicationSalon.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CommunicationsSpecialistMainPage">

    <Grid Background="#ebf9ff">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10">
            <Button x:Name="BAddNewClient"
                    Click="BAddNewClient_Click"
                    Content="Оформление нового клиента"
                    Margin="0,0,0,10"
                    FontSize="18"
                    Padding="5" />
            <Button x:Name="BConnectTariff"
                    Content="Одобрение подключения тарифа"
                    Click="BConnectTariff_Click"
                    FontSize="18"
                    Padding="5" />
        </StackPanel>
        <Frame x:Name="CommunicationsSpecialistFrame"
               NavigationUIVisibility="Hidden"
               Grid.Column="1"/>
    </Grid>
</Page>
