<Page x:Class="CommunicationSalon.Pages.ConnectServicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CommunicationSalon.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConnectServicesPage"
      Loaded="Page_Loaded">

    <Grid Background="#ebf9ff">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button x:Name="BRemove"
                Click="BRemove_Click"
                Content="Отписаться от тарифа"
                Margin="10"
                HorizontalAlignment="Left"
                FontSize="16"
                Padding="5" />
        <DataGrid x:Name="DGClientService"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  ColumnWidth="*"
                  Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Услуга"
                                    Binding="{Binding Service.Name}" />
                <DataGridTextColumn Header="Дата окончания"
                                    Binding="{Binding EndDate}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
